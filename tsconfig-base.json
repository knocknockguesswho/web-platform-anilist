{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2019"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "Assets/*": [
        "./assets/*"
      ],
      "Components/*": [
        "./components/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Helpers/*": [
        "./helpers/*"
      ],
      "Pages/*": [
        "./pages/*"
      ],
      "Styles/*": [
        "./styles/*"
      ],
      "Views/*": [
        "./views/*"
      ],
      "./../../../*": [
        "../*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ]
}